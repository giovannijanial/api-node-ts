generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  id         String     @id @default(uuid())
  name       String
  age        Decimal
  email      String     @unique
  password   String
  position   Position   @relation(fields: [positionId], references: [id])
  positionId String
  matches    MatchDay[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("players")
}

model Position {
  id      String   @id @default(uuid())
  name    String   @unique
  players Player[]

  @@map("positions")
}

model Match {
  id      String     @id @default(uuid())
  date    DateTime
  players MatchDay[]

  // teamHome        Team?    @relation("teamHome", fields: [teamHomeId], references: [id])
  // teamHomeId      String?
  // teamOut         Team?    @relation("teamOut", fields: [teamOutId], references: [id])
  // teamOutId       String?

  @@map("matches")
}

model MatchDay {
  player   Player @relation(fields: [playerId], references: [id])
  playerId String
  match    Match  @relation(fields: [matchId], references: [id])
  matchId  String

  @@id([playerId, matchId])
  @@map("match-day")
}

