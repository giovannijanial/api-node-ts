// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  id         String   @id @default(uuid())
  name       String
  age        Decimal
  email      String   @unique
  password   String
  position   Position @relation(fields: [positionId], references: [id])
  team       Team     @relation(fields: [teamId], references: [id])
  teamId     String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  positionId String

  @@map("players")
}

model Position {
  id      String   @id @default(uuid())
  name    String   @unique
  players Player[]
}

model Team {
  id          String   @id @default(uuid())
  name        String   @unique
  players     Player[]
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
  matchesHome Match[]  @relation("teamHome")
  matchesOut  Match[]  @relation("teamOut")

  @@map("teams")
}

model Match {
  id         String   @id @default(uuid())
  date       DateTime
  teamHome   Team     @relation("teamHome", fields: [teamHomeId], references: [id])
  teamHomeId String
  teamOut    Team     @relation("teamOut", fields: [teamOutId], references: [id])
  teamOutId  String

  @@map("matches")
}
